<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="SlidingTabLayoutStyle">
        <item name="android:layout_height">40dp</item>
        <item name="tl_indicator_color">@color/colorPrimary</item>
        <item name="tl_indicator_height">2dp</item>
        <item name="tl_tab_padding">14dp</item>
        <item name="tl_tab_space_equal">false</item>
        <item name="tl_textBold">SELECT</item>
        <item name="tl_textSelectColor">@color/colorTextTitle</item>
        <item name="tl_textUnselectColor">@color/colorTextHint</item>
        <item name="tl_textsize">@dimen/text_middle</item>
        <item name="tl_underline_height">0dp</item>
    </style>

</resources>
