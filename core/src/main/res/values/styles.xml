<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="SlidingTabLayoutStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tl_indicator_color">@android:color/white</item>
        <item name="tl_indicator_height">4dp</item>
        <item name="tl_tab_padding">@dimen/comm_view_margin_small</item>
        <item name="tl_tab_space_equal">false</item>
        <item name="tl_textBold">SELECT</item>
        <item name="tl_textSelectColor">@android:color/white</item>
        <item name="tl_textUnselectColor">@color/colorWhite70</item>
        <item name="tl_textsize">@dimen/text_normal</item>
        <item name="tl_underline_height">0dp</item>
    </style>

</resources>
